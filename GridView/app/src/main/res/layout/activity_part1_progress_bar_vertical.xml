<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:id="@+id/Part1ProgressBarVerticalActivityId"
    tools:context=".Part1ProgressBarVerticalActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress Bar Vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:padding="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ff2"
        />
    <ProgressBar

        android:id="@+id/part1ProgressBarHorizontalId"
        android:progressBackgroundTint="#B8B6B6"
        android:progressTint="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/part1PRogressbarStoprButonId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/circlebackground"
            android:foreground="?android:attr/selectableItemBackground"
            style="@style/buttonStyle"/>
        <Button
            android:id="@+id/part1PRogressbarStartrButonId"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/circlebackground"
            android:foreground="?android:attr/selectableItemBackground"
            style="@style/buttonStyle"/>

    </LinearLayout>

</LinearLayout>