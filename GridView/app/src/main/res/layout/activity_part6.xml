<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#F40BDE"
    android:id="@+id/Part6ActivityId"
    tools:context=".Part6Activity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/explicitbackgroundimage"
        android:scaleType="fitXY"
        android:background="#ff22"
        android:padding="3dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/part6SharedPreferenceButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared preference"
            android:drawableLeft="@drawable/ic_baseline_emoji_nature_24"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/style_background"/>
        <Button
            android:id="@+id/part6FileDatabaseButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Databese"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_insert_drive_file_24"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/style_background"/>
        <Button
            android:id="@+id/part6SqliteDatabaseButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SQLite Database"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_filter_none_24"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="40dp"
            android:paddingLeft="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/style_background"/>

    </LinearLayout>

</LinearLayout>