<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#00a4b3"
    android:id="@+id/Part5FrameLayoutActivityId"
    tools:context=".Part5FrameLayoutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:id="@+id/part5FrameLayoutbangladeshId"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="2dp"
            android:background="#FF22"
            android:src="@drawable/bangladesh"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:text="Bangladesh"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:id="@+id/part5FrameLayoutsaudiId"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="2dp"
            android:background="#FF22"
            android:src="@drawable/saudi_arabia"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:text="Saudi-Arabia"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:id="@+id/part5FrameLayoutazerbaijanId"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="2dp"
            android:background="#FF22"
            android:src="@drawable/azerbaijan"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:text="Azerbaijan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:id="@+id/part5FrameLayoutafghanistanId"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_weight="1.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="2dp"
            android:background="#FF22"
            android:src="@drawable/afghanistan"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:text="Afghanistan"/>
    </LinearLayout>
</FrameLayout>