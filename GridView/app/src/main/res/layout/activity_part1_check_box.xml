<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:id="@+id/Part1CheckBoxActivityId"
    tools:context=".Part1CheckBoxActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Box"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        />
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:padding="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ff2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming Language Skills : "
        style="@style/textStyle"
        android:textSize="24dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <CheckBox
            android:id="@+id/part1CCheckBoxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" C"
            style="@style/textStyle"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            />
        <CheckBox
            android:id="@+id/part1CCCheckBoxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" C++"
            style="@style/textStyle"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            />
        <CheckBox
            android:id="@+id/part1JavaCheckBoxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" JAVA"
            style="@style/textStyle"
            android:checked="true"
            android:textColor="@color/black"
            android:layout_marginRight="10dp"
            />
        <CheckBox
            android:id="@+id/part1HtmlCheckBoxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" HTML"
            style="@style/textStyle"
            android:textColor="@color/black"
            />

    </LinearLayout>
    <Button
        android:id="@+id/part1CheckBoxShowButtonId"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        style="@style/buttonStyle"
        android:background="@drawable/circlebackground"/>
</LinearLayout>