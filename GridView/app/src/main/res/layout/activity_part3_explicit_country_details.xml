<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00A4B3"
    android:id="@+id/Part3ExplicitCountryDetailsActivityId"
    tools:context=".Part3ExplicitCountryDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/part3CountryDetailsimageViewId"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bangladesh"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:background="#ff22"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#FF22AE"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/part3CountryDetailstextViewId"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="cursive"
            android:text="@string/bangladesh_text"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
</ScrollView>