<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/homeActivityDrawerLayoutId"
    tools:context=".HomeActivity">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:id="@+id/HomeActivityLinearLayoutId"
               android:background="@color/background_color"
               android:gravity="center_horizontal"
               android:weightSum="4">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:gravity="center">
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:backgroundTint="@color/background_color"
                       android:layout_height="105dp"
                       android:layout_margin="10dp"
                       android:clickable="true"
                       android:id="@+id/part1cardViewId"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_weight="1">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="105dp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:background="@drawable/circlebackground2"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="55dp"
                               android:layout_height="45dp"
                               android:scaleType="fitXY"
                               android:layout_gravity="center"
                               android:src="@drawable/forthicon"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Fundamentals"
                               android:gravity="center"
                               android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                               style="@style/textStyle"/>
                       </LinearLayout>


                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:backgroundTint="@color/background_color"
                       android:layout_height="105dp"
                       android:layout_margin="10dp"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:clickable="true"
                       android:id="@+id/part2cardViewId"
                       android:layout_weight="1">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="105dp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:background="@drawable/circlebackground2"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="60dp"
                               android:layout_height="50dp"
                               android:scaleType="fitXY"
                               android:layout_gravity="center"
                               android:src="@drawable/thirdicon"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Basic"
                               android:gravity="center"
                               style="@style/textStyle"/>
                       </LinearLayout>


                   </androidx.cardview.widget.CardView>

               </LinearLayout>
               <!--    second lear-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:gravity="center">
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:backgroundTint="@color/background_color"
                       android:layout_height="105dp"
                       android:layout_margin="10dp"
                       android:clickable="true"
                       android:id="@+id/part3cardViewId"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_weight="1">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="105dp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:background="@drawable/circlebackground2"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="55dp"
                               android:layout_height="45dp"
                               android:scaleType="fitXY"
                               android:layout_gravity="center"
                               android:src="@drawable/secondicon"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Intent"
                               android:gravity="center"
                               style="@style/textStyle"/>
                       </LinearLayout>


                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:backgroundTint="@color/background_color"
                       android:layout_height="105dp"
                       android:layout_margin="10dp"
                       android:clickable="true"
                       android:id="@+id/part4cardViewId"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_weight="1">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="105dp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:background="@drawable/circlebackground2"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="70dp"
                               android:layout_height="50dp"
                               android:scaleType="fitXY"
                               android:layout_gravity="center"
                               android:src="@drawable/highquality_icon"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Higher"
                               android:gravity="center"
                               style="@style/textStyle"/>
                       </LinearLayout>


                   </androidx.cardview.widget.CardView>

               </LinearLayout>
               <!--    third label-->
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:gravity="center">
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:backgroundTint="@color/background_color"
                       android:layout_height="105dp"
                       android:layout_margin="10dp"
                       android:clickable="true"
                       android:id="@+id/part5cardViewId"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_weight="1">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="105dp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:background="@drawable/circlebackground2"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="60dp"
                               android:layout_height="50dp"
                               android:layout_gravity="center"
                               android:scaleType="fitXY"
                               android:src="@drawable/layouticon" />
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Layout"
                               android:gravity="center"
                               style="@style/textStyle"/>
                       </LinearLayout>


                   </androidx.cardview.widget.CardView>
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:backgroundTint="@color/background_color"
                       android:layout_height="105dp"
                       android:layout_margin="10dp"
                       android:clickable="true"
                       android:id="@+id/part6cardViewId"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_weight="1">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="105dp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:background="@drawable/circlebackground2"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="60dp"
                               android:layout_height="50dp"
                               android:layout_gravity="center"
                               android:src="@drawable/database_icon"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Database"
                               android:gravity="center"
                               style="@style/textStyle"/>
                       </LinearLayout>


                   </androidx.cardview.widget.CardView>

               </LinearLayout>
               <!--    Forth label-->
               <LinearLayout
                   android:layout_width="180dp"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:gravity="center">
                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:backgroundTint="@color/background_color"
                       android:layout_height="105dp"
                       android:layout_margin="10dp"
                       android:clickable="true"
                       android:id="@+id/part7cardViewId"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:layout_weight="1">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="105dp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:background="@drawable/circlebackground2"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="60dp"
                               android:layout_height="45dp"
                               android:scaleType="fitXY"
                               android:layout_gravity="center"
                               android:src="@drawable/quizicon"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:text="Quiz"
                               android:gravity="center"
                               style="@style/textStyle"/>
                       </LinearLayout>
                   </androidx.cardview.widget.CardView>

               </LinearLayout>
           </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/nav_item_layout"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_layout"
        android:id="@+id/nav_id"/>
</androidx.drawerlayout.widget.DrawerLayout>