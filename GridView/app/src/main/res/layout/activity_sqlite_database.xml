<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#F40BDE"
    android:id="@+id/SqliteDatabaseActivityId"
    tools:context=".SqliteDatabaseActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/explicitbackgroundimage"
        android:scaleType="fitXY"
        android:background="#ff22"
        android:padding="3dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/part6sqliteeShowDataButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Data"
            android:drawableLeft="@drawable/ic_baseline_visibility_24"
           android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"

            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/new_style_background"/>
        <Button
            android:id="@+id/part6sqliteeUpdateButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Data"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_update_24"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/new_style_background"/>
        <Button
            android:id="@+id/part6sqliteDeleteButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/new_style_background"/>
         <Button
            android:id="@+id/part6sqliteeshowAllButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show All Data"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_show_chart_24"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/new_style_background"/>
 <Button
            android:id="@+id/part6sqliteeshowAllAccountButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show All Account"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_security_24"
             android:paddingLeft="20dp"
             android:paddingRight="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ff2"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/new_style_background"/>

    </LinearLayout>

</LinearLayout>